service cloud.firestore {
  match /databases/{database}/documents {
  	// match /{document=**} {
  	//   allow read, write
  	// }
  	
    match /{document=**} {
      allow read, write: if request.auth.uid != null;
    }
    match /paradigm/config {
      allow read;
      allow write: if request.auth.uid != null
    }
    match /users/{user=**} {
      allow read, write;
    }
  }
}